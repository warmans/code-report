{
    "name": "warmans/code-report",
    "type": "library",
    "description": "Convert raw code metrics into attractive reports",
    "keywords": ["code", "ci", "metrics", "report"],
    "homepage": "https://github.com/warmans/code-report",
    "authors": [
        {
            "name": "Stefan Warman",
            "email": "stefan.warman@gmail.com"
        }
    ],
    "support": {
        "source": "https://github.com/warmans/code-report"
    },
    "require": {
        "php": ">=5.4.0",
        "symfony/templating":   "v2.5.0",
        "symfony/console":      "v2.5.0",
        "symfony/filesystem":   "v2.5.0",
        "pimple/pimple":        "v2.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.1.*",
        "squizlabs/php_codesniffer": "1.*",
		"phploc/phploc": "2.0.0"
    },
    "suggest": {
        "phploc/phploc": "2.1.*@dev"
    },
    "autoload": {
        "psr-4": { "CodeReport\\": "src/" }
    },
    "bin": [
        "code-report"
    ]
}
